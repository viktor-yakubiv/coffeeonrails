<p id="notice"><%= notice %></p>

<h1><%= t('nav.ingredients') %></h1>

<table class="table">
  <thead>
  <tr>
    <th><%= t('table.name') %></th>
    <th><%= t('table.amount_left') %></th>
    <th><%= t('table.price') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.amount_left %></td>
        <td><%= ingredient.price %></td>
        <td>
          <%= simple_form_for(ingredient) do |f| %>

              <div class="form-inputs">
                <%= f.input :amount_left %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, t('edit.submit') %>
              </div>
          <% end %></td>
        <td><%= link_to t('edit.show'), ingredient %></td>
        <td><%= link_to t('edit.edit'), edit_ingredient_path(ingredient) %></td>
        <td><%= link_to t('edit.destroy'), ingredient, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('edit.create'), new_ingredient_path %>

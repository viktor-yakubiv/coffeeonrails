<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Order sum</th>
      <th>Drink</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_sum %></td>
        <td><%= order.drink.name %></td>

        <td>
          <%= link_to 'Show', order, class: 'btn btn-secondary' %>
          <% if current_user.is_admin? %>
            <%= link_to 'Edit', edit_order_path(order), class: 'btn btn-secondary' %>
            <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


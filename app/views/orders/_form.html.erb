<%= simple_form_for(@order) do |f| %>
  <!--<%= f.error_notification %>-->

  <div class="form-inputs">
    <%= f.association :drink, include_blank: false %>
    <!--<%= f.label :ingredients, include_blank: false %>-->
    <div class="form-chekboxes">
      <%= f.association :ingredients, as: :check_boxes %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('edit.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>
